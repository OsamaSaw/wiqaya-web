{
  "version": 2,
  "builds": [
    {
      "src": "build/**/*",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ],
  "buildCommand": "npm run build",
  "outputDirectory": "build",
  "installCommand": "npm install",

  "rewrites": [
    { "source": "/api/(.*)", "destination": "http://94.130.142.135:4001/$1" },
    { "source": "/(.*)", "destination": "/index.html" }
  ]
}
